{
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022",
      "moduleResolution": "node",
      "lib": ["es2020", "dom"],
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["./**/*.ts", ],
    "exclude": ["node_modules"]
} 